<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient">

    <!-- Header with back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Kembali"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvPinSettingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIN Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_curved"
        android:layout_margin="16dp"
        android:padding="16dp">

        <!-- Current PIN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current PIN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etCurrentPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter current PIN"
            android:inputType="numberPassword"
            android:maxLength="5"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- New PIN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New PIN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etNewPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new PIN"
            android:inputType="numberPassword"
            android:maxLength="5"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Confirm New PIN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm New PIN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etConfirmPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm new PIN"
            android:inputType="numberPassword"
            android:maxLength="5"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Update Button -->
        <Button
            android:id="@+id/btnUpdatePin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update PIN"
            android:background="@drawable/bg_button_rounded"
            android:textColor="@android:color/white"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout> 